// Place your settings in this file to overwrite the default settings
// For colors see: https://code.visualstudio.com/docs/getstarted/theme-color-reference
{
    // to list all mono fonts use: fc-list :mono
    "editor.fontFamily": "'Fira Code','Inconsolata Nerd Font'",
    "editor.fontSize": 18,
    "editor.fontLigatures": false,
    "window.restoreWindows": "none",
    "files.hotExit": "off",
    "code-runner.runInTerminal": true,
    "workbench.colorCustomizations": {
        "tab.activeBackground": "#881021A8"
    },
    "python.linting.pylintArgs": [
        "--rcfile=~/.config/pylint/pylint.config",
        "--include-naming-hint=y",
        "--name-group=ignore"
    ],
    "files.autoSave": "onFocusChange",
    "files.trimTrailingWhitespace": true,
    "workbench.tips.enabled": true,
    "window.zoomLevel": 1,
    "window.openFoldersInNewWindow": "off",
    "editor.minimap.showSlider": "mouseover",
    "editor.minimap.enabled": false,
    "editor.folding": true,
    "editor.renderWhitespace": "none",
    "workbench.startupEditor": "newUntitledFile",
    "window.menuBarVisibility": "default",
    "terminal.integrated.fontFamily": "'Inconsolata Nerd Font'",
    "terminal.integrated.fontSize": 18,
    "editor.renderControlCharacters": false,
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "editor.tabSize": 3,
    "[python]": {
        "editor.tabSize": 4
    },
    "[javascript]": {
        "editor.tabSize": 3
    },
    "[json]": {
        "editor.tabSize": 2
    },
    "diffEditor.renderSideBySide": true,
    "diffEditor.ignoreTrimWhitespace": true,
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "python.jediEnabled": false,
    "editor.formatOnSave": true,
    "html.format.wrapLineLength": 160,
    "python.formatting.autopep8Args": [
        "--max-line-length=200",
        "--indent-size=4"
    ],
    "prettifySymbolsMode.substitutions": [
        {
            "language": "shellscript",
            "revealOn": "active-line",
            "substitutions": [
                {
                    "ugly": "macro index",
                    "pretty": "MACRO INDEX",
                    "pre": "$"
                },
            ]
        }
    ],
    "python.linting.pylintEnabled": true,
    "breadcrumbs.enabled": true,
    "vsicons.dontShowNewVersionMessage": true,
    "workbench.colorTheme": "Hopscotch (TextMate Theme)"
}