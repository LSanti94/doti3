// Place your settings in this file to overwrite the default settings
// For colors see: https://code.visualstudio.com/docs/getstarted/theme-color-reference
{
  // to list all mono fonts use: fc-list :mono
  "editor.fontFamily": "'Fira Code','Inconsolata Nerd Font'",
  "editor.fontSize": 18,
  "editor.fontLigatures": false,
  "window.restoreWindows": "none",
  "files.hotExit": "off",
  "code-runner.runInTerminal": true,
  "workbench.colorCustomizations": {
    "tab.activeBackground": "#881021A8",
    "editor.inactiveSelectionBackground": "#22476C"
  },
  "python.linting.pylintArgs": [
    "--rcfile=~/.config/pylint/pylint.config",
    "--include-naming-hint=y",
    "--name-group=ignore"
  ],
  "files.autoSave": "onFocusChange",
  "files.trimTrailingWhitespace": true,
  "workbench.tips.enabled": true,
  "window.zoomLevel": 1,
  "window.openFoldersInNewWindow": "off",
  "editor.minimap.showSlider": "always",
  "editor.minimap.enabled": true,
  "editor.folding": true,
  "editor.renderWhitespace": "none",
  "workbench.startupEditor": "newUntitledFile",
  "window.menuBarVisibility": "default",
  "terminal.integrated.fontFamily": "'Inconsolata Nerd Font'",
  "terminal.integrated.fontSize": 18,
  "editor.renderControlCharacters": false,
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,
  "editor.tabSize": 3,
  "[python]": {
    "editor.tabSize": 4
  },
  "[javascript]": {
    "editor.tabSize": 3
  },
  "[json]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "diffEditor.renderSideBySide": true,
  "diffEditor.ignoreTrimWhitespace": true,
  "editor.suggestSelection": "first",
  // ~/.vscode/extensions/foxundermoon.shell-format-7.0.0/bin/shfmt_v3.0.0_linux_amd64 -h
  // Google style guid: https://google.github.io/styleguide/shell.xml
  "shellformat.flag": "-i=2 -ci -sr -bn -ln=bash",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "python.jediEnabled": false,
  "editor.formatOnSave": true,
  "html.format.wrapLineLength": 160,
  "python.formatting.autopep8Args": [
    "--max-line-length=200",
    "--indent-size=4"
  ],
  "python.linting.pylintEnabled": true,
  "breadcrumbs.enabled": true,
  "vsicons.dontShowNewVersionMessage": true,
  "workbench.iconTheme": "vscode-icons",
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "workbench.colorTheme": "Gruvbox Dark Hard",
  "files.associations": {
    ".Xdefaults": "makefile",
    "i3/config": "i3",
    "config": "i3",
    ".xinitrc": "shellscript",
    "*.sh": "shellscript"
  },
  "bashBeautify.tabSize": 3,
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[shellscript]": {
    "editor.formatOnSave": false
  }
}
